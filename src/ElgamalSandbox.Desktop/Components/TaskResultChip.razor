@using ElgamalSandbox.Core.Entities

@if (TaskDescription.Attempts.Any(x => x is {IsPassedTests: true, IsSucceeded: true}))
{
    <MudChip Variant="Variant.Filled" Color="Color.Success">Решена</MudChip>
}
else
{
    <MudChip Variant="Variant.Filled" Color="Color.Default">Не решена</MudChip>
}

@code {
    [Parameter] public TaskDescription TaskDescription { get; set; }
}
